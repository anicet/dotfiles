[user]
	name = anicet
	email = todo
[diff]
  color = true
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  spull = !git-svn fetch && git-svn rebase
  spush = !git-svn dcommit
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  msg = commit --allow-empty -m
  unstage = reset HEAD --
  last = log -1 HEAD
  visual = !qgit4
  wd = diff --word-diff
  rso = remote show origin
  cia = commit --reedit-message=HEAD
  rbc = rebase --continue
  mt = mergetool
  fa = fetch --all
  pr = pull --rebase
  pa = pull --all
  cpk = cherry-pick
  undo = reset --soft HEAD^ 
;[apply]
  ;whitespace = nowarn
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = auto
  pager = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  tool = meld
[core]
  editor = vim
  pager = less -FRSX
[push]
	default = tracking